<!--pages/picker/picker.wxml-->
<view>
  <view class='section'>
    <text>地区选择器</text>
    <picker bindchange='bindPickerChange' value='{{index}}' range='{{array}}'>
      <view class='picker'>
        当前选择：{{array[index]}}
      </view>
    </picker>
  </view>
</view>

<view>
  <view class='section'>
    <text>时间选择器</text>
    <picker mode='time' bindchange='bindTimeChange' value='{{time}}' start='09:01' end="21:01">
      <view class='picker'>
        当前选择：{{time}}
      </view>
    </picker>
  </view>
</view>

<view>
  <view class="section">
      <text>日期选择器</text>
      <picker mode="date" value="{{date}}" start="2015-09-01" end="2017-09-01" bindchange="bindDateChange">
        <view class="picker">
          当前选择: {{date}}
        </view>
      </picker>
    </view>
</view>
